<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/type_background">

    <ImageButton
        android:id="@+id/botaoRetornar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@android:drawable/ic_media_previous"
        android:contentDescription="Retornar" />

    <TextView
        android:id="@+id/titleTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POKEMON TYPES"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTypes"
        android:text="@string/descriptionTypes"
        android:textColor="@color/black"
        android:padding="16dp"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/linearLayoutTipos"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_below="@id/textViewDescricao">

        <ImageView
            android:id="@+id/imageViewTipo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/all_types"
            android:contentDescription="Tipo 1" />



    </LinearLayout>

    <Button
        android:id="@+id/buttonDetalhes"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's BATTLE!!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@id/linearLayoutTipos"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

</RelativeLayout>
